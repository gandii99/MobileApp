<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swiperefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/home_jbzd"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="148dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/jbzd" />

    <ImageView
        android:id="@+id/home_kwejk"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/home_jbzd"
        app:layout_constraintTop_toTopOf="@+id/home_jbzd"
        app:srcCompat="@drawable/kwejk" />

    <ImageView
        android:id="@+id/home_fabrykamemow"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="22dp"
        app:layout_constraintStart_toStartOf="@+id/home_kwejk"
        app:layout_constraintTop_toBottomOf="@+id/home_kwejk"
        app:srcCompat="@drawable/fabrykamemow" />

    <ImageView
        android:id="@+id/home_chamsko"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="22dp"
        app:layout_constraintStart_toStartOf="@+id/home_jbzd"
        app:layout_constraintTop_toBottomOf="@+id/home_jbzd"
        app:srcCompat="@drawable/chamsko" />

    <ImageView
        android:id="@+id/home_repostuj"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="22dp"
        app:layout_constraintStart_toStartOf="@+id/home_chamsko"
        app:layout_constraintTop_toBottomOf="@+id/home_chamsko"
        app:srcCompat="@color/black" />

    <ImageView
        android:id="@+id/home_cos"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="22dp"
        app:layout_constraintStart_toStartOf="@+id/home_fabrykamemow"
        app:layout_constraintTop_toBottomOf="@+id/home_fabrykamemow"
        app:srcCompat="@color/black" />

    <TextView
        android:id="@+id/network_lost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFC107"
        android:fontFamily="@font/abeezee"
        android:gravity="center"
        android:text="Network connection is not avalible!"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="168dp"
        tools:visibility="invisible" />
</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>